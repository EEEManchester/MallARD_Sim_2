<launch>
    <!-- Get the value of environment variable MALLARD_COMP -->
    <!-- 0: Robot computer. 1: Base Staion comptuer. 2: another comptuer. Only relavant for Real Robot Mode. -->
    <arg name="MALLARD_COMP" value="$(optenv MALLARD_COMP 1)" /> 

    <!-- Choose launch file - based on environment variables -->    
    <group if="$(eval MALLARD_COMP == 0)">
        <!-- Start Robot -->
        <include file="$(find launch_config)/launch/sub_launch/mallard_robot.launch"/>
        <!-- Run nodes -->

    </group>
    <group if="$(eval MALLARD_COMP == 1)">
        <!-- Start Robot -->
        <include file="$(find launch_config)/launch/sub_launch/mallard_base_station.launch"/>
    </group>

</launch>