<launch>
    <arg name="MALLARD_COMP" value="$(optenv MALLARD_COMP 1)" /> 
    
    <group if="$(eval MALLARD_COMP == 1)">
        <!-- Start Gazebo -->
        <include file="$(find mallard_autonomy)/launch/gazebo.launch"/>
    </group>

    <group if="$(eval MALLARD_COMP == 1)">
        <!-- Start Robot -->
        <include file="$(find mallard_autonomy)/launch/robot.launch"/>
        <!-- Start Base Station -->
        <include file="$(find mallard_autonomy)/launch/base_station.launch"/>
    </group>

  

</launch>